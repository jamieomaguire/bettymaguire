---
import Layout from "../../layouts/Layout.astro";
import ImageGallery from "../../components/ImageGallery.astro";
import { stillsPageContent } from "../../data/stillsPages.astro";

export function getStaticPaths() {
  return Array.from(stillsPageContent.keys()).map(key => ({ params: { pageId: key } }));
}

const { pageId } = Astro.params;

const currentPageImages: ImageMetadata[] = stillsPageContent.get(pageId) || [];

---

<Layout title={`Betty Maguire - Stills Page ${pageId}`} pageId={pageId} pageType="stills">
  <main class="c-main">
    <ImageGallery images={currentPageImages} />
  </main>
</Layout>
